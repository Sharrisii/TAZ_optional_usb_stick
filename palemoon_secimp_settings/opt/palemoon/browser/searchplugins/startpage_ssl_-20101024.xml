<OpenSearchDescription xmlns="http://a9.com/-/spec/opensearch/1.1/"
                       xmlns:moz="http://www.mozilla.org/2006/browser/search/">
<ShortName>Startpage (SSL)</ShortName>
<Description>Startpage is a search engine that does not collect or share personally identifiable information. This search bar extension utilizes SSL to protect transmissions between You and Startpage.</Description>
<InputEncoding>UTF-8</InputEncoding>
<Image width="16" height="16" type="image/x-icon">https://startpage.com/favicon.ico</Image>
<Url type="text/html" method="POST" template="https://startpage.com/do/metasearch.pl">
   <Param name="query" value="{searchTerms}"/>
   <Param name="cat" value="web"/>
   <Param name="language" value="english"/>
</Url>
<moz:SearchForm>https://startpage.com/</moz:SearchForm>
</OpenSearchDescription>
